<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="202dp"
        android:layout_height="69dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="課程查詢"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="開課院所"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spinner_department"
        android:layout_width="296dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="開課班級或單位"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/spinner_department"
        app:layout_constraintTop_toBottomOf="@+id/spinner_department" />

    <Spinner
        android:id="@+id/spinner_unit"
        android:layout_width="296dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:layout_marginTop="144dp"
        android:text="確認"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/spinner_unit"
        app:layout_constraintTop_toBottomOf="@+id/spinner_unit" />
</androidx.constraintlayout.widget.ConstraintLayout>