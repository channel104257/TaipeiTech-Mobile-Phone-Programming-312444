<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_courseNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="324751"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_courseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_courseName"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/tv_courseName"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="民法總則"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_courseNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="61dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:text="陳蕙君"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_courseName"
        app:layout_constraintStart_toEndOf="@+id/tv_courseName"
        app:layout_constraintTop_toTopOf="@+id/tv_courseName" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="5dp"
        android:background="#FF0000"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_courseName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_teacher"
        app:layout_constraintTop_toTopOf="@+id/tv_courseName" />

</androidx.constraintlayout.widget.ConstraintLayout>